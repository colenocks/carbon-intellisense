{
  "name": "carbon-intellisense",
  "displayName": "Carbon Design System IntelliSense",
  "description": "Auto-completion and intellisense documentation for Carbon Design System SCSS tokens",
  "version": "0.1.0",
  "publisher": "colenocks",
  "repository": {
    "type": "git",
    "url": "https://github.com/colenocks/carbon-intellisense"
  },
  "keywords": [
    "carbon",
    "design-system",
    "scss",
    "tokens",
    "intellisense",
    "autocomplete",
    "hover"
  ],
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "*",
    "onStartupFinished",
    "onLanguage:scss",
    "onLanguage:css",
    "onCommand:carbonIntellisense.diagnostics"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "carbonIntellisense.diagnostics",
        "title": "Carbon IntelliSense: Diagnostics",
        "category": "Carbon IntelliSense"
      },
      {
        "command": "carbonIntellisense.invokeProvider",
        "title": "Carbon IntelliSense: Invoke Provider",
        "category": "Carbon IntelliSense"
      }
    ],
    "configuration": {
      "title": "Carbon IntelliSense",
      "properties": {
        "carbonIntellisense.theme": {
          "type": "string",
          "default": "white",
          "enum": ["white", "g10", "g90", "g100"],
          "description": "Carbon theme for token value suggestions"
        },
        "carbonIntellisense.showComputedValues": {
          "type": "boolean",
          "default": true,
          "description": "Show computed pixel values in suggestions"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p tsconfig.test.json",
    "watch-tests": "tsc -p tsconfig.test.json -w",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "npm run compile-tests && mocha --recursive out/test --reporter spec"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "mocha": "^11.7.5",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  }
}
